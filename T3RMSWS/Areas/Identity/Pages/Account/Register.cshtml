@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container logupBg">
    <div class="loginTable row">
        <div class="col-lg-5 logupImg text-center">
            <img height="80" src="~/img/logo.png" />
            <h2 class="text-light mt-3">Welcome!</h2>
        </div>
        <div class="col-lg-7 p-5">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Sign Up</h4>
                <hr />
                <div id="registerErrorMsg" asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="Input.Email"></label>
                        <input id="registerEmail" asp-for="Input.Email" class="form-control" />
                        <span id="registerEmailErrorMsg" asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Input.Mobile"></label>
                        <input id="registerMobile" asp-for="Input.Mobile" class="form-control" />
                        <span id="registerMobileErrorMsg" asp-validation-for="Input.Mobile" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="Input.FirstName"></label>
                        <input id="registerFirstName" asp-for="Input.FirstName" class="form-control" />
                        <span id="registerFirstNameErrorMsg" asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Input.LastName"></label>
                        <input id="registerLastName" asp-for="Input.LastName" class="form-control" />
                        <span id="registerLastNameErrorMsg" asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="Input.Password"></label>
                        <input id="registerPassword" asp-for="Input.Password" class="form-control" />
                        <span id="registerPasswordErrorMsg" asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input id="registerPasswordConfirm" asp-for="Input.ConfirmPassword" class="form-control" />
                        <span id="registerPasswordConfirmErrorMsg" asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button id="register" type="submit" class="btn btn-primary">Register</button>
                </div>
                <div class="form-group">
                    <p>Already a member?<a class="ml-2" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Sign in</a></p>
                </div>

            </form>
        </div>
    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
