
@model T3RMSWS.Data.ReservationRequest

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Customer Booking</h2>
<hr />
<div class="row editBackground">
    <div class="col-lg-4 editTable text-light">
        <p class="text-light">@ViewBag.AvailableTimeMsg</p>
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input hidden="" asp-for="Email" class="form-control" value="m@e.com" />
                <input hidden="" asp-for="GuestName" class="form-control" value="default" />
                <input hidden="" asp-for="Mobile" class="form-control" value="0400000000" />
            </div>
            <div class="form-group">
                <label asp-for="StartDateTime" class="control-label"></label>
                <input class="calendar-7 form-control input" name="startDateTime" value="@Model.StartDateTime" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
            <label asp-for="Duration" class="control-label"></label>
            <select asp-for="Duration" class="form-control selector" asp-items="Html.GetEnumSelectList<DurationLength>()">
                <option value="">Please select duration</option>
            </select>
            <span asp-validation-for="Duration" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="NumberOfGuest" class="control-label"></label>
                <input asp-for="NumberOfGuest" class="form-control" value="@Model.NumberOfGuest" />
                <span asp-validation-for="NumberOfGuest" class="text-danger"></span>
            </div>

            <label asp-for="TableType" class="control-label"></label>
            <select asp-for="TableType" class="form-control selector" asp-items="Html.GetEnumSelectList<TableType>()">
                <option value="">Assign reservation to a table</option>
            </select>
            <div class="form-group">
                <label asp-for="Requirement" class="control-label"></label>
                <textarea asp-for="Requirement" class="form-control rounded"></textarea>
                <span asp-validation-for="Requirement" class="text-danger"></span>
            </div>
            <div class="text-right">
                <input type="submit" value="Edit Customer Reservation" class="btn btn-primary" />
            </div>
            <div class="text-right">
                <a class="text-light" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


