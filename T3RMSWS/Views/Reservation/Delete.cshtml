@model T3RMSWS.Data.ReservationRequest

@{
    ViewData["Title"] = "Delete";
}

<h2>Are you sure you want to delete this reservation?</h2>
<hr />
<div class="mt-4 deleteBackground">
    <div class="row">
        <div class="col-lg-6"></div>
        <div class="col-lg-6">
            <dl class="row detailTable text-light">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.GuestName)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.GuestName)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.ReferenceNo)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.ReferenceNo)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.TimeStamp)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.TimeStamp)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.NumberOfGuest)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.NumberOfGuest)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.StartDateTime)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.StartDateTime)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.EndDateTime)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.EndDateTime)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Requirement)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Requirement)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.ReservationSource)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.ReservationSource)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.SittingType)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.SittingType)
                </dd>
            </dl>
            <form class="text-dark text-right" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-danger" asp-controller="Reservation" asp-action="Details" asp-route-id="@Model.Id">Back to Reservation</a>
            </form>
        </div>
    </div>
</div>